# Ambiente
NODE_ENV=development
PORT=3000

# Postgres (ex.: docker-compose: postgres://postgres:postgres@localhost:5432/franquia?schema=public)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/franquia?schema=public"

# JWT
# Dica: use algo bem aleatório e >= 32 chars
JWT_SECRET="CHANGE_ME_SUPER_SECRET_32CHARS_MIN"
ACCESS_TOKEN_TTL="15m"
REFRESH_TOKEN_TTL="7d"

# E-mail (Mailhog em dev: host=localhost, port=1025, sem auth)
EMAIL_FROM="no-reply@franquia.local"
SMTP_HOST="localhost"
SMTP_PORT=1025
SMTP_USER=""
SMTP_PASS=""

# URLs
APP_URL="http://localhost:3000"        # URL pública da API
FRONTEND_URL="http://localhost:5173"   # URL do seu frontend

# AbacatePay
ABACATEPAY_API_KEY="change_me_abacate_key"
# ABACATEPAY_BASE_URL tem default em src/env.ts; defina aqui se precisar trocar
# ABACATEPAY_BASE_URL="https://api.abacatepay.com/v1"
ABACATEPAY_WEBHOOK_SECRET="change_me_webhook_secret"
